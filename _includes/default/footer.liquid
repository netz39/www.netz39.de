<footer class="site-footer">
    {% assign current_lang = page.lang | default: site.lang | default: site.default_lang | default: 'en' %}
    {% assign footer_i18n = site.data.i18n[current_lang].footer %}
    <p class="text">
        <i class="fa fa-edit"></i> <a href="{{ site.github.repository_url }}/blob/main/{{ page.path }}">{{ footer_i18n.edit_on_github }}</a>
    </p>

    {% if site.footer_text %}
    <p class="text">
        {{ site.footer_text }}
    </p>
    {% endif %}

    <div class="footer-icons">
        <ul>
        <!-- Social icons from Font Awesome, if enabled -->
        {% include social/icons.liquid %}
        </ul>
    </div>

    <div class="footer-links">
        <ul>
            {% assign pages = site.pages | where_exp: 'p', 'p.lang == current_lang' | sort: 'position' %}
            {% for page in pages %}
            {% if page.show-in-footer %}
            <li>
                <a class="clear" aria-label="{{ page.title }}" title="{{ page.title }}" href="{{ page.url | relative_url }}">
                    {{ page.title }}
                </a>
            </li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>

</footer>


